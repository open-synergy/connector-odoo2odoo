<openerp>
<data>

<record id="sale_order_view_form" model="ir.ui.view">
    <field name="name">sale.order.binding.form</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
        <xpath expr="//page[last()]" position="after">
            <page name="connector" string="Connectors" groups="connector.group_connector_manager">
                <group name="odoo2odoo" string="Odoo2Odoo">
                    <field name="odoo_bind_ids" nolabel="1"/>
                </group>
            </page>
        </xpath>
    </field>
</record>

<record id="odoo_sale_order_view_tree" model="ir.ui.view">
    <field name="name">odoo.sale.order.tree</field>
    <field name="model">odoo.sale.order</field>
    <field name="arch" type="xml">
        <tree string="Odoo2Odoo Bindings">
            <field name="backend_id"/>
            <field name="odoo_id"/>
            <field name="external_odoo_id"/>
            <field name="sync_date"/>
        </tree>
    </field>
</record>

</data>
</openerp>
